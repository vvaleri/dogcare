.reviews
    margin 0 0 210px 0
    
    &__content
        display flex
         
    &__inner
        display flex
        
    &__item
        max-width 324px
        margin 0 25px 0 0
        padding 50px 44px 40px
        background-color #FFFFFF
        border-radius 20px
        line-height 24px
        
        &:last-child
            margin margin-child 
            
        p
            margin 0 0 30px 0
            color #4B4B4B
           
    &__box
        display flex
        align-items center
           
        span
        margin-left 17px
        color color-secondary
        font-weight weight-bold
           
._max-width
    max-width 324px