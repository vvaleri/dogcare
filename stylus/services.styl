.services
    margin  0 auto 120px 
    
    &__content
      display grid
      grid-template-columns repeat(3, 324px)
      grid-template-rows 1fr 1fr
      grid-gap 24px
      margin 75px 0 66px
    
    &__item
      padding 50px 44px
      text-align center
      background-color #ffffff
      border-radius 20px
      transition 0.4s
      cursor pointer

      &:hover
        box-shadow 0px 11px 8px 8px rgba(34, 60, 80, 0.2)
        transition 0.4s


      img
        margin 0 0 30px 0
        
     &__btn
       {flexCenter}
