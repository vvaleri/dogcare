.main
    padding-top 250px
    margin-bottom 120px

    @media (max-width: 600px)
      padding-top 150px
    
    @media (min-height: 667px)
      margin-bottom 210px

    @media (max-height: 400px) and (orientation: landscape)
      padding-top 180px
      margin-bottom 100px

    @media (max-height: 320px) and (orientation: landscape)
      margin-bottom 30px
    
    &__bg img
        position absolute
        width 100%
        height 100vh
        top 0
        left 0
        z-index 1
        object-fit cover

    
    &__content
      z-index 4
      position relative  
    
h1
    margin-bottom 48px
    max-width 680px
    font-size 56px
    line-height 56px

    @media (max-width: 600px)
      max-width 450px
      font-size 32px
      line-height 30px

    @media (max-height: 500px) and (orientation: landscape)
      margin-bottom 20px
      font-size 32px
      line-height 28px
