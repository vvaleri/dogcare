.main
    margin 0 0 120px 0
    
    @media (min-height: 667px)
      margin 0 0 210px 0

    @media (max-height: 400px) and (orientation: landscape)
      margin 0 0 100px 0

    @media (max-height: 320px) and (orientation: landscape)
      margin 0 0 30px 0
    
    &__bg img
        position absolute
        width 100%
        height 100vh
        top 0
        left 0
        z-index 1
        object-fit cover

    
    &__content
      z-index 4
      position relative  
    
h1
    margin 0 0 48px 0
    max-width 680px
    font-size 56px
    line-height 56px

    @media (min-height: 730px) and (orientation: portrait)
      margin 250px 0 48px

    @media (max-width: 600px)
      margin 190px 0 48px
      max-width 450px
      font-size 42px
      line-height 48px

    @media (max-height: 500px) and (orientation: landscape)
      margin 100px 0 20px
      font-size 32px
      line-height 28px

    @media (max-width: 425px) 
      margin 150px 0 35px
      font-size 36px
      line-height 40px