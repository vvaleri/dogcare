.contact
  {spaceBetween}
  margin-bottom 100px
  background-color #29C3BE

  @media (max-width: 600px)
    flex-direction column-reverse
    align-items center

  img
    max-width 100%

    @media (max-width: 600px)
      display none
     
  &__img
    display flex
    padding-top 50px

    @media (max-width: 600px)
      padding-top 0
       
  &__content
    {flexColumn}
    justify-content center
    align-items flex-start

    @media (max-width: 600px)
      padding-top 20px
      padding-bottom 20px
      padding-left 20px
      padding-right 20px
      align-items center
      text-align center
       
       
  &__box
    margin-top 140px

    @media (max-width: 600px)
      display none
       
  h2
    max-width 411px
    margin-bottom 30px
    font-weight 700
    font-size 36px
    line-height 42px

    @media (max-width: 768px)
      font-size 26px
      line-height 30px

    @media (max-width: 425px)
      font-size 20px
      line-height 26px