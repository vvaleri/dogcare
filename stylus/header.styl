
header
    z-index 5
    position relative
    font-size 12px
    margin 0 0 120px 0
    
.header__info
    {spaceBetween}
    padding 25px 0 0 0
    margin 0 0 25px 0

    @media (max-width: 600px)
        justify-content center
    
.header__contacts,
.header__hours,
.header__phone
    display flex

.header__contacts
    @media (max-width: 600px)
        display none

    
.header__hours,
.header__phone
    margin 0 30px 0 0
    align-items flex-start

    img 
        margin 0 10px 0 0
        padding 5px 0 0 0
      
    
.header__inner
    {flexColumn}
    line-height 22px


._none
    @media (max-width: 790px)
        display none


.panel-header
    margin 0 0 110px 0

    @media (max-width: 600px)
            position absolute
            top 0
            left 0
            
            // width 100%
            height 100vh
            // display flex
            // align-items center
            background-color color-main
           // z-index 99

    
    &__inner
        {spaceBetween}
        align-items center
        padding 10px 40px
        color #000000
        background-color #FFFFFF
        border-radius 10px

        @media (max-width: 600px)
            padding 20px 30px
        
        
    &__items
        display flex

        @media (max-width: 600px)
            flex-direction column
        
    &__link
        line-height 22px
        font-weight weight-bold
        margin 0 37px 0 0

        @media (max-width: 600px)
            margin 0 0 20px 0
            font-size 16px

        &:last-child
            margin margin-child
           
    &__box
        @media (max-width: 600px)
            display none

        img 
            margin 0 25px 0 0
            &:last-child
                margin margin-child
     
details > summary
    list-style none
    cursor pointer

    @media (min-width: 768px)
        &:hover
            text-decoration underline
            

summary::-webkit-details-marker
    display none
      
.summary-items
    {flexColumn}
    position absolute
    top 30px
    padding 0 15px
    background-color #ffffff
    border-radius 0 0 10px 10px
    

    a
        margin 0 0 5px 0


details
    position relative

details summary::after
    content url('../img/arrow.svg')
    position absolute
    right -18px
    transform rotate(-90deg)

details[open] summary::after
    top 3px
    transform rotate(0deg)