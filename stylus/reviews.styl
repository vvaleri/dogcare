.reviews
    margin 0 0 210px 0

    @media (max-width: 810px)
        margin 0 0 150px 0

    @media (max-width: 425px)
        margin 0 0 120px 0

    
    &__content
        display flex

        @media (max-width: 950px)
            flex-direction column
            align-items center
         
    &__inner
        display flex

        @media (max-width: 950px)
            margin 30px 0 0 0

        @media (max-width: 690px)
            flex-direction column
            justify-content center

        
    &__item
        max-width 324px
        margin 0 25px 0 0
        padding 50px 44px 40px
        background-color #FFFFFF
        border-radius 20px
        line-height 24px
        
        &:last-child
            margin margin-child 
            
        p
            margin 0 0 30px 0
            color #4B4B4B

        @media (max-width: 690px)
            margin 0 0 25px 0
            

        @media (max-width: 375px)
            padding 40px 30px 30px

           
    &__box
        display flex
        align-items center
           
        span
            color color-secondary
            font-family font-bold

        img
            margin 0 17px 0 0
           
._max-width
    max-width 324px

    @media (max-width: 950px)
        max-width 100%