.services
    margin  0 auto 120px

    @media (max-width: 600px)
      margin-bottom 70px
    
    &__content
      display grid
      grid-template-columns repeat(3, 324px)
      grid-template-rows 1fr 1fr
      grid-gap 24px
      margin-top 75px
      margin-bottom 65px

      @media (max-width: 1060px)
        grid-template-columns repeat(auto-fit, minmax(300px, 1fr))
    
    &__item
      padding 50px 44px
      text-align center
      background-color #ffffff
      border-radius 20px
      transition box-shadow transition-300

      @media (max-width: 375px)
        padding 40px 30px

      @media (hover: hover), screen and (min-width: 0\0)
        &:hover,
        &:focus
          box-shadow 0px 11px 8px 8px rgba(34, 60, 80, 0.2)

      svg
        margin-bottom 30px
        
     &__btn
       {flexCenter}
