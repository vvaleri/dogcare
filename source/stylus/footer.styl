.footer
    &__inner
        padding-left 10px
        padding-right 10px
    
    &__panel
        {spaceBetween}
        margin -75px auto 0 
        padding 45px 70px
        background-color color-main
        border-radius 20px

        @media (max-width: 810px)
            padding 35px

        @media (max-width: 465px)
            flex-direction column
            align-items center
            margin -20px auto 0
            padding 20px

        p
            padding-right 10px
            max-width 510px
            font-weight 700
            font-size 24px
            line-height 30px

            @media (max-width: 676px)
                font-size 18px
                line-height 20px

            @media (max-width: 465px)
                margin-bottom 10px
                padding 0

            @media (max-width: 320px)
                font-size 16px

    &__sign
        background-color color-main
        font-size 12px
        line-height 18px
        font-weight 400

    &__info
        {spaceBetween}
        padding 20px 10px

        @media (max-width: 676px)
            flex-direction column
            align-items center
            text-align center

            p
                &:first-child
                    margin-bottom 10px