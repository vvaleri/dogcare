.reviews
    margin-bottom 210px

    @media (max-width: 860px)
        margin-bottom 70px

    &__content
        display flex

        @media (max-width: 950px)
            flex-direction column
            align-items center

        .title
            max-width 324px

            @media (max-width: 950px)
                max-width 100%
         
    &__inner
        display flex

        @media (max-width: 950px)
            margin-top 30px

        @media (max-width: 690px)
            flex-direction column
            justify-content center

        
    &__item
        max-width 324px
        margin-right 25px
        padding 50px 44px 40px
        background-color #FFFFFF
        border-radius 20px
        line-height 24px
        
        &:last-child
            margin margin-child 
            
        p
            margin-bottom 30px
            color #4B4B4B

        @media (max-width: 690px)
            margin-bottom 20px
            margin-right 0
            

        @media (max-width: 375px)
            padding 40px 30px 30px

           
    &__box
        display flex
        align-items center
           
        span
            color color-secondary
            font-weight 700

        img
            margin-right 15px
