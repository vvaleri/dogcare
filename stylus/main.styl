.main
    margin 0 0 120px 0
    
    
    &__bg img
      position absolute
      width 100%
      height 100vh
      top 0
      left 0
      z-index 1
      object-fit cover

    
    &__content
      z-index 4
      position relative   
    
h1
    margin 0 0 48px 0
    max-width 680px
    font-size 56px
    line-height 56px
    font-weight weight-bold 
    

    @media (max-width: 600px)
      margin 190px 0 48px 0
      max-width 450px
      font-size 42px
      line-height 48px